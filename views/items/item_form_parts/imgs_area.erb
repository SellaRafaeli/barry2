<%
  imgs = item['imgs'] || []
  #hide_images ||= false
%>
<div class='form-group'>
      <div class='col-md-12'>
      <% imgs.each do |img| %>
        <span class='col-md-2 ct'>
          <img src="<%=img['link']%>" height=100>
          <div><a href='/items/remove_img?item_id=<%=item['_id']%>&img_to_remove=<%=img['link']%>'> Delete </a></div>
        </span>      
      <% end %>
      </div>

    <div class="form-group">
        <label> Add Images </label>
        <%= erb :"layout/partials/upload_to_imgur_input" %>
    </div>
</div>