<%
  item = item || {}
  creating_new_item ||= false
%>

<section class='col-md-6 col-md-offset-3'>
<h3> <%= title %> </h3>
  <form action=<%= route %> method='post' enctype="multipart/form-data">
    <% if item['_id'] %>
    <input type="hidden" name='item_id' value='<%=item['_id']%>'> 
    <% end %>
    <% [:title, :desc].each do |field| %>
      <div class="form-group">
        <label for="item-form-<%=field%>"><%=field.capitalize%></label>
        <input type="text" class="form-control" id="item-form-<%=field%>" placeholder="<%=field%>" name=<%=field%> value='<%=item[field]%>' required>
      </div>
    <% end %>
    
    <%= erb :"items/item_form_parts/item_facets_dropdowns", locals: {require_select: true, item: item} %>
    <%= erb :"items/item_form_parts/imgs_area", locals: {item: item, editing_imgs: true} %>
    <%= erb :"items/item_form_parts/file_upload", locals: {item: item} %> 
    <hr/>
    <button type="submit" class="btn btn-default btn-primary btn-block">Submit</button>
</form>
</section>