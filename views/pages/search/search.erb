<h1> Search </h1>
<div class='col-md-6 search_page'>  
  <form action='/search' method='get'>
    <div class="form-group">
      <!-- <label for="exampleInputFile">Search</label> -->
      <input type="text" class='form-control' name='q' placeholder='Search for users or posts'>
      <!-- <p class="help-block">Search for users or posts.</p> -->
    </div>
    <button type="submit" class="btn btn-default">Search</button>
  </form>

  <% if params[:q] %>
    <%= erb :"pages/search/search_results" %>
  <% end %>
</div>